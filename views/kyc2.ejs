<%- include('header') -%>
<html lang="en">
  <body>
    <title>KYC update</title>
    <style>
      .head {
        max-height: 10vh;
        margin: 3vh 0 5vh 0;
        display: flex;
        justify-content: end;
      }
      body {
        background-color: #f5f5f5;
        padding: 0;
        margin: 0 15rem;
      }
      .maindiv {
        background-color: #fff;
        padding: 2%;
      }
      .logo img {
        width: 8rem;
      }
      .body {
        text-align: center;
      }
      .body h2,
      .body h1 {
        letter-spacing: 1px;
      }
      .body img {
        width: 30%;
        height: 30%;
      }
      .body h4 {
        color: grey;
      }

      .body .text {
        color: grey;
        margin: 30px 0 30px 0;
        font-size: large;
        font-weight: 550;
      }

      @media only screen and (max-width: 600px) {
        .logo img {
          width: 5rem;
        }
        body {
          margin: 0 1rem;
        }
        .body img {
          width: 90%;
          max-height: 35vh;
          min-height: 35vh;
        }
      }
    </style>
    <div class="container maindiv">
      <div class="head">
        <div class="logo">
          <img src="/images/logo.png" alt="logo" />
        </div>
      </div>
      <div class="body">
        <h1>KYC Verification!</h1>
        <img src="/images/passreset.jpg" alt="kanan" />
        <p class="text">Hi, John Doe! Your KYC Verification is complete.</p>
        <p class="text">Happy Investing!</p>
      </div>
      <%- include('footer') -%>
    </div>
  </body>
</html>
